# File for storing command abbreviations

# General
alias ls='ls --color=auto'
alias ll='ls -al --group-directories-first --color=auto'
alias tp='trash-put'
alias fzf='fzf --bind=ctrl-d:half-page-down,ctrl-u:half-page-up'
alias xo='xdg-open'
alias xpo='setsid >/dev/null 2>&1 xdg-open'
alias pm='pulsemixer'
alias tmux='tmux -f ${XDG_CONFIG_HOME:-$HOME/.config}/tmux/tmux.conf'
alias bash='bash --rcfile "${XDG_CONFIG_HOME:-$HOME/.config}/bash/bashrc"'
alias mt='udisksctl mount -b'
alias umt='udisksctl unmount -b'
alias dh='dirs -v'
alias e='$EDITOR'
alias fe='als_tmp="$(find . -type f | fzf)"; [ -n "$als_tmp" ] && $EDITOR -- "$als_tmp"'
alias fd='cd -- "$(find . -type d | fzf)"'
alias ff='als_tmp="$(find . -type f | fzf)"; [ -n "$als_tmp" ] && cd "$(dirname -- "$als_tmp")"'
alias R='R --no-save'
alias bt='bluetuith'
alias rgf='rg --files | rg'
alias dmpd='setsid mpd-discord-rpc >/dev/null 2>&1 &'
alias plhist='$PAGER ~/Music/Playlists/hist.$HOST.m3u'
alias hl='secrets decrypt "${XDG_DATA_HOME:-$HOME/.local/share}/ledger" && hledger --auto --strict --infer-equity --real --pretty --color=always'
alias hlv='secrets decrypt "${XDG_DATA_HOME:-$HOME/.local/share}/ledger" && hledger --auto --strict --infer-equity --pretty --color=always'
alias update='nh os switch --ask --hostname "$(cat -- ~/.config/nixos-config-profile)" ~/nixos-config/'
alias der='direnv reload'

# Git
alias gs='git status'
alias ga='git add'
alias gau='git add -u'
alias gd='git diff'
alias gdd='git diff --submodule=diff'
alias gds='git diff --staged'
alias gdsd='git diff --staged --submodule=diff'
alias gc='git commit'
alias gck='git checkout'
alias gp='git push'
alias gpl='git pull'
alias gpls='git pull --recurse-submodules=yes'
alias gplr='git pull --rebase'
alias grs='git restore --staged'
alias gir='git rebase -i'
alias lg='lazygit'
alias gsuir='git submodule update --init --recursive'
alias gst='git stash push'
alias gstp='git stash pop'
alias gstl='git stash list'
alias gf='git fetch'
alias gfs='git fetch --recurse-submodules=on'
alias gig='$EDITOR -- "$(git rev-parse --show-toplevel)/.gitignore"'

# SSH
alias sshp='ssh-add ~/.ssh/p'
alias sshr='ssh-add ~/.ssh/r'
alias sshdp='ssh-add -d ~/.ssh/p'
alias sshdr='ssh-add -d ~/.ssh/r'
